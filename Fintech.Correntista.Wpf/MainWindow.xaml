<Window x:Class="Fintech.Correntista.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fintech.Correntista.Wpf"
        mc:Ignorable="d"
        Title="Fintech Correntista" WindowState="Maximized" MinWidth="800" MinHeight="450">
    <TabControl>
        <TabItem Header="Clientes">
            <TabControl TabStripPlacement="Left">
                <TabItem Header="Pesquisa" Name="pesquisaClienteTabItem">
                    <DataGrid x:Name="clientesDataGrid" 
                              AutoGenerateColumns="True" 
                              CanUserAddRows="False"/>
                </TabItem>
                <TabItem Header="Cadastro">
                    <StackPanel>
                        <DockPanel>
                            <Label Content="CPF:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <TextBox Name="cpfTextBox" 
                                     VerticalContentAlignment="Center" 
                                     Height="23" 
                                     TextWrapping="NoWrap"></TextBox>
                        </DockPanel>  
                        <DockPanel>
                            <Label Content="Nome:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <TextBox Name="nomeTextBox" 
                                     VerticalContentAlignment="Center" 
                                     Height="23" 
                                     TextWrapping="NoWrap"></TextBox>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Data de Nascimento:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <TextBox Name="nascimentoTextBox" 
                                     VerticalContentAlignment="Center" 
                                     Height="23" 
                                     TextWrapping="NoWrap"></TextBox>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Sexo:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <ComboBox Name="sexoComboBox" 
                                     VerticalContentAlignment="Center" 
                                     HorizontalAlignment="Left"
                                     Height="23" 
                                     Width="150"></ComboBox>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Logradouro:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <TextBox Name="logradouroTextBox" 
                                     VerticalContentAlignment="Center" 
                                     Height="23" 
                                     TextWrapping="NoWrap"></TextBox>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Número:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <TextBox Name="numeroTextBox" 
                                     VerticalContentAlignment="Center" 
                                     Height="23" 
                                     TextWrapping="NoWrap"></TextBox>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Cidade:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <TextBox Name="cidadeTextBox" 
                                     VerticalContentAlignment="Center" 
                                     Height="23" 
                                     TextWrapping="NoWrap"></TextBox>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="CEP:" Width="120" HorizontalContentAlignment="Right"></Label>
                            <TextBox Name="cepTextBox" 
                                     VerticalContentAlignment="Center" 
                                     Height="23" 
                                     TextWrapping="NoWrap"></TextBox>
                        </DockPanel>
                        <DockPanel>
                            <Button x:Name="incluirClienteButton"
                                    Content="Incluir"
                                    Margin="120 2 0 0"
                                    Height="23"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    Click="incluirClienteButton_Click"/>
                        </DockPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Header="Contas">
            
        </TabItem>
        <TabItem Header="Operações bancárias">

        </TabItem>
    </TabControl>
</Window>
